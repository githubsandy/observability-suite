{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "8.0.0"
    },
    {
      "type": "panel",
      "id": "stat",
      "name": "Stat",
      "version": ""
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    }
  ],
  "id": null,
  "title": "Database Monitoring (Simple)",
  "tags": ["database", "mongodb", "postgresql", "redis"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "30s",
  "schemaVersion": 30,
  "version": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "title": "Database Exporter Status",
      "type": "stat",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "up{job=~\".*mongo.*\"}",
          "legendFormat": "MongoDB Exporter - {{instance}}",
          "refId": "A"
        },
        {
          "expr": "up{job=~\".*postgres.*\"}",
          "legendFormat": "PostgreSQL Exporter - {{instance}}",
          "refId": "B"
        },
        {
          "expr": "up{job=~\".*redis.*\"}",
          "legendFormat": "Redis Exporter - {{instance}}",
          "refId": "C"
        },
        {
          "expr": "up{job=\"mongodb-exporter\"}",
          "legendFormat": "MongoDB Exporter (Direct)",
          "refId": "D"
        },
        {
          "expr": "up{job=\"postgres-exporter\"}",
          "legendFormat": "PostgreSQL Exporter (Direct)",
          "refId": "E"
        },
        {
          "expr": "up{job=\"redis-exporter\"}",
          "legendFormat": "Redis Exporter (Direct)",
          "refId": "F"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          },
          "unit": "short",
          "mappings": [
            {"type": "value", "value": "0", "text": "DOWN"},
            {"type": "value", "value": "1", "text": "UP"}
          ]
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "textMode": "auto",
        "colorMode": "background"
      }
    },
    {
      "id": 2,
      "title": "All Database Targets",
      "type": "stat",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "count(up{job=~\".*mongo.*|.*postgres.*|.*redis.*\"})",
          "legendFormat": "Database Targets Found",
          "refId": "A"
        },
        {
          "expr": "count(up{job=~\".*mongo.*|.*postgres.*|.*redis.*\"} == 1)",
          "legendFormat": "Healthy Database Targets",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "textMode": "auto",
        "colorMode": "background"
      }
    },
    {
      "id": 3,
      "title": "Available Database Metrics",
      "type": "stat",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "count({__name__=~\"mongodb_.*\"})",
          "legendFormat": "MongoDB Metrics",
          "refId": "A"
        },
        {
          "expr": "count({__name__=~\"pg_.*\"})",
          "legendFormat": "PostgreSQL Metrics",
          "refId": "B"
        },
        {
          "expr": "count({__name__=~\"redis_.*\"})",
          "legendFormat": "Redis Metrics",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "textMode": "auto",
        "colorMode": "background"
      }
    }
  ]
}