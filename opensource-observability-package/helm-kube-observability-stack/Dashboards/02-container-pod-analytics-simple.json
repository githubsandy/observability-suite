{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "8.0.0"
    },
    {
      "type": "panel",
      "id": "timeseries",
      "name": "Time series",
      "version": ""
    },
    {
      "type": "panel",
      "id": "stat",
      "name": "Stat",
      "version": ""
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    }
  ],
  "id": null,
  "title": "Container & Pod Analytics (Fixed)",
  "tags": ["cadvisor", "kubernetes", "containers", "pods"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "30s",
  "schemaVersion": 30,
  "version": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "title": "Pod Status Overview",
      "type": "stat",
      "gridPos": {"h": 6, "w": 24, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "count(kube_pod_info)",
          "legendFormat": "Total Pods",
          "refId": "A"
        },
        {
          "expr": "count(kube_pod_status_phase{phase=\"Running\"})",
          "legendFormat": "Running",
          "refId": "B"
        },
        {
          "expr": "count(kube_pod_status_phase{phase=\"Pending\"})",
          "legendFormat": "Pending",
          "refId": "C"
        },
        {
          "expr": "count(kube_pod_status_phase{phase=\"Failed\"})",
          "legendFormat": "Failed",
          "refId": "D"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short",
          "decimals": 0
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "textMode": "auto",
        "colorMode": "background"
      }
    },
    {
      "id": 2,
      "title": "Container CPU Usage Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total[5m]))",
          "legendFormat": "Total CPU Usage",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "desc"}
      }
    },
    {
      "id": 3,
      "title": "Container Memory Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes)",
          "legendFormat": "Total Memory Usage",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "bytes"
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "desc"}
      }
    },
    {
      "id": 4,
      "title": "cAdvisor Scrape Targets",
      "type": "stat",
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 14},
      "targets": [
        {
          "expr": "count(up{job=\"cadvisor\"})",
          "legendFormat": "cAdvisor Targets",
          "refId": "A"
        },
        {
          "expr": "count(up{job=\"cadvisor\"} == 1)",
          "legendFormat": "Healthy cAdvisor",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "textMode": "auto",
        "colorMode": "background"
      }
    },
    {
      "id": 5,
      "title": "Kubernetes State Metrics",
      "type": "stat",
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 14},
      "targets": [
        {
          "expr": "count(up{job=\"kube-state-metrics\"})",
          "legendFormat": "kube-state-metrics",
          "refId": "A"
        },
        {
          "expr": "count(kube_deployment_status_replicas)",
          "legendFormat": "Deployments",
          "refId": "B"
        },
        {
          "expr": "count(kube_service_info)",
          "legendFormat": "Services",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "textMode": "auto",
        "colorMode": "background"
      }
    },
    {
      "id": 6,
      "title": "Container Network Bytes",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
      "targets": [
        {
          "expr": "sum(rate(container_network_receive_bytes_total[5m]))",
          "legendFormat": "Network RX",
          "refId": "A"
        },
        {
          "expr": "sum(rate(container_network_transmit_bytes_total[5m]))",
          "legendFormat": "Network TX",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "Bps"
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "desc"}
      }
    }
  ]
}