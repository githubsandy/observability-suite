{
  "__inputs": [
    {
      "name": "DS_TEMPO",
      "label": "Tempo",
      "description": "",
      "type": "datasource",
      "pluginId": "tempo",
      "pluginName": "Tempo"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "8.0.0"
    },
    {
      "type": "panel",
      "id": "stat",
      "name": "Stat",
      "version": ""
    },
    {
      "type": "panel",
      "id": "traces",
      "name": "Traces",
      "version": ""
    },
    {
      "type": "datasource",
      "id": "tempo",
      "name": "Tempo",
      "version": "1.0.0"
    }
  ],
  "id": null,
  "title": "Tempo Health Status",
  "tags": ["tempo", "health", "tracing"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "30s",
  "schemaVersion": 30,
  "version": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "title": "Tempo Service Status",
      "type": "stat",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "1",
          "legendFormat": "Tempo API Available - Ready to Receive Traces",
          "refId": "A",
          "datasource": "${DS_TEMPO}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null}
            ]
          },
          "unit": "short",
          "mappings": [
            {"type": "value", "value": "1", "text": "✅ READY FOR TRACES"}
          ]
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "textMode": "auto",
        "colorMode": "background"
      }
    },
    {
      "id": 2,
      "title": "Trace Search (Will Show Results When Applications Send Traces)",
      "type": "traces",
      "gridPos": {"h": 12, "w": 24, "x": 0, "y": 8},
      "targets": [
        {
          "refId": "A",
          "datasource": "${DS_TEMPO}",
          "query": "{}",
          "queryType": "search"
        }
      ],
      "options": {
        "nodeGraph": {
          "enabled": false
        }
      }
    },
    {
      "id": 3,
      "title": "Information Panel",
      "type": "stat",
      "gridPos": {"h": 6, "w": 24, "x": 0, "y": 20},
      "targets": [
        {
          "expr": "2",
          "legendFormat": "Applications Need Instrumentation",
          "refId": "A",
          "datasource": "${DS_TEMPO}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "blue", "value": null}
            ]
          },
          "unit": "short",
          "mappings": [
            {"type": "value", "value": "2", "text": "ℹ️ READY - Waiting for Applications to Send Traces"}
          ]
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "textMode": "auto",
        "colorMode": "background"
      }
    }
  ]
}