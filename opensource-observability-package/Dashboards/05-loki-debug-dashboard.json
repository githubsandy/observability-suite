{
  "__inputs": [
    {
      "name": "DS_LOKI",
      "label": "Loki",
      "description": "",
      "type": "datasource",
      "pluginId": "loki",
      "pluginName": "Loki"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "8.0.0"
    },
    {
      "type": "panel",
      "id": "logs",
      "name": "Logs",
      "version": ""
    },
    {
      "type": "panel",
      "id": "stat",
      "name": "Stat",
      "version": ""
    },
    {
      "type": "datasource",
      "id": "loki",
      "name": "Loki",
      "version": "1.0.0"
    }
  ],
  "id": null,
  "title": "Loki Debug Dashboard",
  "tags": ["debug", "loki", "logs"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "30s",
  "schemaVersion": 30,
  "version": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "title": "Loki Connection Test",
      "type": "stat",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "1",
          "legendFormat": "If you see this, Loki datasource is connected",
          "refId": "A",
          "datasource": "${DS_LOKI}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "textMode": "auto",
        "colorMode": "background"
      }
    },
    {
      "id": 2,
      "title": "Basic Log Query - All Labels",
      "type": "logs",
      "gridPos": {"h": 12, "w": 24, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "{}",
          "refId": "A",
          "datasource": "${DS_LOKI}"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": true,
        "wrapLogMessage": false,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    }
  ]
}