{
  "__inputs": [
    {
      "name": "DS_LOKI",
      "label": "Loki",
      "description": "",
      "type": "datasource",
      "pluginId": "loki",
      "pluginName": "Loki"
    },
    {
      "name": "DS_TEMPO",
      "label": "Tempo",
      "description": "",
      "type": "datasource",
      "pluginId": "tempo",
      "pluginName": "Tempo"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "8.0.0"
    },
    {
      "type": "panel",
      "id": "timeseries",
      "name": "Time series",
      "version": ""
    },
    {
      "type": "panel",
      "id": "logs",
      "name": "Logs",
      "version": ""
    },
    {
      "type": "panel",
      "id": "stat",
      "name": "Stat",
      "version": ""
    },
    {
      "type": "datasource",
      "id": "loki",
      "name": "Loki",
      "version": "1.0.0"
    },
    {
      "type": "datasource",
      "id": "tempo",
      "name": "Tempo",
      "version": "1.0.0"
    }
  ],
  "id": null,
  "title": "Logs & Traces Analytics (Simple)",
  "tags": ["logs", "traces", "loki", "tempo"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "30s",
  "schemaVersion": 30,
  "version": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "title": "Log Volume Overview",
      "type": "stat",
      "gridPos": {"h": 6, "w": 24, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "sum(count_over_time({job=~\".+\"}[5m]))",
          "legendFormat": "Total Log Lines",
          "refId": "A",
          "datasource": "${DS_LOKI}"
        },
        {
          "expr": "sum(count_over_time({job=\"kubernetes-pods\"}[5m]))",
          "legendFormat": "Kubernetes Pod Logs",
          "refId": "B",
          "datasource": "${DS_LOKI}"
        },
        {
          "expr": "sum(count_over_time({job=\"system\"}[5m]))",
          "legendFormat": "System Logs",
          "refId": "C",
          "datasource": "${DS_LOKI}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short",
          "decimals": 0
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "textMode": "auto",
        "colorMode": "background"
      }
    },
    {
      "id": 2,
      "title": "Log Rate Over Time",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 6},
      "targets": [
        {
          "expr": "sum(rate({job=~\".+\"}[5m]))",
          "refId": "A",
          "datasource": "${DS_LOKI}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "reqps"
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"},
        "tooltip": {"mode": "multi", "sort": "desc"}
      }
    },
    {
      "id": 3,
      "title": "Recent Logs (All Sources)",
      "type": "logs",
      "gridPos": {"h": 12, "w": 24, "x": 0, "y": 14},
      "targets": [
        {
          "expr": "{job=~\".+\"}",
          "refId": "A",
          "datasource": "${DS_LOKI}"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "id": 4,
      "title": "Kubernetes Pod Logs",
      "type": "logs",
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 26},
      "targets": [
        {
          "expr": "{job=\"kubernetes-pods\"}",
          "refId": "A",
          "datasource": "${DS_LOKI}"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "id": 5,
      "title": "System Logs",
      "type": "logs",
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 36},
      "targets": [
        {
          "expr": "{job=\"system\"}",
          "refId": "A",
          "datasource": "${DS_LOKI}"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    }
  ]
}